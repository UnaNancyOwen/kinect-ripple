        <TextBlock x:Name="Y2Value" Grid.RowSpan="1" Grid.Row="3" Grid.ColumnSpan="1" Grid.Column="9" Visibility="Collapsed" Text="0.00" FontSize="30" TextAlignment="Center"/>
